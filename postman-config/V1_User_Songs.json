{
  "info": {
    "name": "Spotify Clone API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{URL}}/auth/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{URL}}/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Albums",
      "item": [
        {
          "name": "Get All Albums",
          "request": {
            "method": "GET",
            "url": "{{URL}}/albums",
            "header": []
          }
        },
        {
          "name": "Get Album by ID",
          "request": {
            "method": "GET",
            "url": "{{URL}}/albums/:id",
            "header": [],
            "variable": [
              {
                "key": "id",
                "value": "album_id_here"
              }
            ]
          }
        },
        {
          "name": "Create Album (Protected)",
          "request": {
            "method": "POST",
            "url": "{{URL}}/albums",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"New Album\",\n    \"imageUrl\": \"https://example.com/images/album.jpg\",\n    \"releaseDate\": \"2023-01-01\",\n    \"artistId\": \"artist_id_here\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Songs",
      "item": [
        {
          "name": "Get All Songs",
          "request": {
            "method": "GET",
            "url": "{{URL}}/songs",
            "header": []
          }
        },
        {
          "name": "Get Song by ID",
          "request": {
            "method": "GET",
            "url": "{{URL}}/songs/:id",
            "header": [],
            "variable": [
              {
                "key": "id",
                "value": "song_id_here"
              }
            ]
          }
        },
        {
          "name": "Get Featured Songs",
          "request": {
            "method": "GET",
            "url": "{{URL}}/songs/featured",
            "header": []
          }
        },
        {
          "name": "Search Songs",
          "request": {
            "method": "GET",
            "url": "{{URL}}/songs/search?q=shape",
            "header": []
          }
        },
        {
          "name": "Create Song (Protected)",
          "request": {
            "method": "POST",
            "url": "{{URL}}/songs",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"New Song\",\n    \"duration\": 180,\n    \"url\": \"https://example.com/music/new-song.mp3\",\n    \"imageUrl\": \"https://example.com/images/song.jpg\",\n    \"albumId\": \"album_id_here\",\n    \"artistId\": \"artist_id_here\",\n    \"isFeatured\": false,\n    \"releaseDate\": \"2023-01-01\"\n}"
            }
          }
        },
        {
          "name": "Like Song (Protected)",
          "request": {
            "method": "POST",
            "url": "{{URL}}/songs/:id/like",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "variable": [
              {
                "key": "id",
                "value": "song_id_here"
              }
            ]
          }
        },
        {
          "name": "Unlike Song (Protected)",
          "request": {
            "method": "DELETE",
            "url": "{{URL}}/songs/:id/like",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "variable": [
              {
                "key": "id",
                "value": "song_id_here"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "User Liked Songs",
      "item": [
        {
          "name": "Get User Liked Songs (Protected)",
          "request": {
            "method": "GET",
            "url": "{{URL}}/users/me/liked-songs",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ]
          }
        }
      ]
    }
  ]
}